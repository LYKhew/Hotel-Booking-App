<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- First CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg1"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/hotelimage4"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_service"
                android:layout_width="371dp"
                android:layout_height="138dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@drawable/spa"
                android:scaleType="fitXY"
                android:src="@drawable/spa" />

            <TextView
                android:id="@+id/tv_spa_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Glow Spa"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_spa_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Escape the stress with our spa feature. Treat yourself, unwind, feel renewed."
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_book_spa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:text="BOOK" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Second CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="322dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg1"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/hotelimage4"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_service2"
                android:layout_width="315dp"
                android:layout_height="144dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/playtopia" />

            <TextView
                android:id="@+id/tv_playtopia_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Playtopia"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_playtopia_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Playtopia: Unlimited fun for kids to explore, play, and connect!"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_book_playtopia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:text="BOOK" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

